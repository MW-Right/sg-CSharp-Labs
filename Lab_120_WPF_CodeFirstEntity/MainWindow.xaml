<Window x:Class="Lab_120_WPF_CodeFirstEntity.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab_120_WPF_CodeFirstEntity"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" FontSize="30">
    <Grid Background="#FFFFA2A2">
        <ListBox x:Name="studentList" HorizontalAlignment="Left" Height="244" Margin="82,120,0,0" VerticalAlignment="Top" Width="162" SelectionChanged="StudentList_SelectionChanged" FontSize="12"/>
        <ListBox x:Name="studentDetailsList" HorizontalAlignment="Left" Height="160" Margin="394,120,0,0" VerticalAlignment="Top" Width="200" FontSize="12"/>
        <TextBlock x:Name="StudentText" HorizontalAlignment="Left" Margin="82,77,0,0" TextWrapping="NoWrap" Text="Student List" VerticalAlignment="Top" Background="#FFFF5858" Width="248"/>
        <TextBlock x:Name="studentDetails" HorizontalAlignment="Left" Margin="394,77,0,0" TextWrapping="Wrap" Text="Student Details" VerticalAlignment="Top" Background="#FFFF6363" RenderTransformOrigin="0.856,1.288"/>
    </Grid>
</Window>
